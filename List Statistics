num = int(input())

positive_list = []
negative_list = []

sum_negative = 0

for i in range(1, num + 1):
    number = int(input())
    if number > 0:
        positive_list.append(number)
    elif number < 0:
        negative_list.append(number)

for el in negative_list:
    sum_negative += el

print(positive_list)
print(negative_list)
print(f"Count of positives: {len(positive_list)}. Sum of negatives: {sum_negative}")
